/***
 Pattern
 * * * * *
 * * *
 * 
 * * *
 * * * * *
****/

#include<stdio.h>
int main()
{
    int n,i,j;
    scanf("%d",&n);
    for(i=n;i>=1;i-=2,printf("\n"))
    {
        for(j=1;j<=i;j++)
          printf("*");
    }
    for(i=3;i<=n;i+=2,printf("\n"))
    {
        for(j=1;j<=i;j++)
           printf("*");
    }
    
}
